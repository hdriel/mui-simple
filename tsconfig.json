{
    "compilerOptions": {
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "outDir": "lib",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationDir": "lib",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "noEmitOnError": false,
        "jsx": "react",

        "baseUrl": "./",
        "declarationMap": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "typeRoots": ["./src/@types"]
    },
    "include": ["src", ".storybook", "./global.d.ts"],
    "exclude": [".idea", ".git", "build", "node_modules", "lib", "dist", "storybook-static", "rollup.config.js"]
}

{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "declarationDir": "lib", // Output TypeScript declarations here
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["dom", "esnext", "dom.iterable"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitOnError": false,
        "outDir": "lib", // Output JavaScript here, matching Rollup 'dir'
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": false,
        "target": "esnext",
        "typeRoots": ["./src/@types"]
    },
    "include": ["src", ".storybook"],
    "exclude": [".idea", ".git", "build", "node_modules", "lib", "dist", "storybook-static"]
}

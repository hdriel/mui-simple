{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "outDir": "lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": false,
    "jsx": "react"
  },
  "noImplicitAny": false,
  "include": ["src", ".storybook"],
  "exclude": ["node_modules", "lib", "storybook-static", "public"]
}
{
    "exclude": [
        ".idea",
        ".git",
        ".nginx",
        ".storybook",
        ".webpack",
        "public",
        "node_modules"
    ],
    "include": ["./src"],
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2015",
        "lib": ["ES6", "ES2020", "DOM"],
        "allowJs": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "../",
        "noEmit": false,
        "noEmitOnError": false,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": { "#src/*": ["./src/*"] },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}

{
    "compilerOptions": {
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "ES6",
        "outDir": "lib",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationDir": "lib",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false, // true
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "noEmitOnError": false,
        "jsx": "react",
        "noImplicitAny": false,
        "baseUrl": "."
    },
    "include": ["src",  ".storybook"],
    "exclude": [".idea", ".git", "node_modules", "lib", "storybook-static", "public"]
}
